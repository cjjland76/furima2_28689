<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Product</th>
      <th>Category</th>
      <th>Status</th>
      <th>Delivery fee</th>
      <th>Delivery area</th>
      <th>Delivery day</th>
      <th>Price</th>
      <th>User</th>
      <th>View count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.product %></td>
        <td><%= item.category %></td>
        <td><%= item.status %></td>
        <td><%= item.delivery_fee %></td>
        <td><%= item.delivery_area %></td>
        <td><%= item.delivery_day %></td>
        <td><%= item.price %></td>
        <td><%= item.user_id %></td>
        <td><%= item.view_count %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
